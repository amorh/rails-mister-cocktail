<h1>All Cocktails</h1>

<div class="container">
  <div class="card text-center">
  <% @cocktails.each do |cocktail| %>
    <div class="row">
      <div class="card" style="width: 18rem;">
        <img src="https://d32miag6ta013h.cloudfront.net/master_cocktails/1348/en-ca/small/525x525_roman-cosmo-martini-cocktail.jpg" class="card-img-top" alt="...">
          <div class="card-body">
              <h5 class="card-title"><%= link_to link_to cocktail.name, cocktail_path(cocktail), class: 'btn btn-primary' %></h5>
            <% end %>
          </div>
      </div>
    </div>
</div>

<%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-primary' %>
